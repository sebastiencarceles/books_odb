<tr id="book_<%= book.id %>">
  <td><%= book.title %></td>
  <td><%= book.author %></td>
  <td><%= summary(book) %></td>
  <td><%= link_to 'Show', book_path(book.slug) %></td>
  <td>
    <% if user_signed_in? && current_user&.id == book.user_id %>
      <%= link_to 'Edit', edit_book_path(book.slug) %>
    <% end %>
  </td>
  <td>
    <% if user_signed_in? && current_user&.id == book.user_id %>
      <%= link_to 'Delete', book_path(book.slug), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
    <% end %>
  </td>
</tr>
